{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ES6",
    "moduleResolution": "node",
    "outDir": "./dist/assets/js",
    "rootDir": "./assets/js",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "sourceMap": false
  },
  "include": ["assets/js/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}